---
import { NAV_LINKS } from "src/constants";
---

<footer class="w-full lg:w-[900px] mx-auto my-5 px-5 lg:px-0">
    <div class="flex flex-col md:flex-row justify-center items-center gap-5 w-full mx-auto max-w-screen-xl p-4 lg:p-0 lg:py-4 md:items-center md:justify-between">
        <ul class="flex flex-wrap gap-x-5 items-center mt-3 text-sm lg:text-base font-medium sm:mt-0">
            {
                NAV_LINKS.map(link => (
                    <li>
                        <a
                            href={link.url}
                            aria-label={link.label}
                            class="opacity-80 hover:text-mainBg hover:opacity-100 hover:scale-110 focus:text-mainBg focus:opacity-100 focus:outline focus:outline-2 outline-mainBg focus:rounded-full focus:p-1 transition"
                        >
                            {link.title}
                        </a>
                    </li>
                ))
            }
        </ul>
        <span class="text-sm lg:text-base opacity-80 sm:text-center">Web realizada por Fernando Mu√±oz - 2024</span>
    </div>
</footer>