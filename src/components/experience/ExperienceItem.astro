---
import { render } from "astro:content";

const { title, company, date, link, experience } = Astro.props;
const { Content } = await render(experience);

---

<div class="absolute w-3 h-3 bg-gray-600 rounded-full mt-1.5 -start-1.5 border border-gray-600 dark:border-white dark:bg-white"></div>
<article class="flex flex-col items-start lg:flex-row">
    <div class="flex-1">
        <h3 class="text-2xl font-semibold text-tertiary text-balance mb-5">{title}</h3>
        <h3 class="text-xl font-semibold">{company}</h3>
        <time class="font-normal leading-none opacity-80">{date}</time>
    </div>
    <div class="flex-1">
        <div class="my-5 lg:my-0 lg:mb-5 text-lg text-gray-500 dark:text-white text-pretty opacity-95">
            <Content />
        </div>
        {
            link && (
                <a
                href={link}
                target="_blank"
                class="text-mainBg opacity-75 hover:opacity-100 inline-flex justify-center items-center gap-x-2 hover:scale-105 hover:underline underline-offset-8 transition">
                    Ver m√°s {" "}
                    <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                    </svg>
                </a>
            )
        }
    </div>
</article>
