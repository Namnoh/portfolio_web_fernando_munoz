---
import '@fontsource/titillium-web';
import Header from "@components/Header.astro";
import Footer from '@components/Footer.astro';
import Analytics from '@vercel/analytics/astro'

interface Props {
	title: string;
	description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="Desarrollador Web Full Stack, Programador Web, Full Stack JavaScript, Desarrollo de aplicaciones web, Desarrollo de aplicaciones móviles, Contratar desarrollador web, Fernando Muñoz desarrollador, Tecnologías JavaScript, Desarrollo web profesional, Servicios de programación web, Node.js, React, Next.js, Tailwind CSS, Desarrollo front-end, Desarrollo back-end, Programador freelance, Creación de aplicaciones personalizadas, Diseño web responsivo, Programación de APIs, Optimización de aplicaciones web, Desarrollo ágil de software, Consultor de desarrollo web, Desarrollador web en Chile, Programador web chileno, Servicios de desarrollo web en Santiago">
		<meta name="author" content="Fernando Muñoz">
		<link rel="canonical" href="https://fernandomunoz.vercel.app/">
		<meta name="robots" content="index, follow">
		<meta name="publisher" content="Fernando Muñoz - Desarrollador Web">
		<meta name="google-site-verification" content="D81B45ABr7qS54umtFp95ApUWpQVI-sAzuUdz4h-7tI" />
	</head>
	<body>
		<div class="fixed top-0 left-0 z-[-2] min-h-screen min-w-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#000400_1px)] bg-[size:20px_20px]"></div>
		<Header />
		<slot />
		<Footer />
		<Analytics />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	
	html {
		font-family: 'Titillium Web', sans-serif;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		background-repeat: repeat;
		/* line-height: 1.5; Nomalización de "line-height" */
	}

	*, *::before, *::after {
		box-sizing: inherit;
	}

	@media (prefers-reduce-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>

<script>
	// Estilos globales
	document.addEventListener('DOMContentLoaded', () => {
		const htmlElement = document.documentElement;
		if (htmlElement.classList.contains('dark')) {
			htmlElement.classList.remove('dark');
		} else {
			htmlElement.classList.add('dark');
		}
	});
</script>